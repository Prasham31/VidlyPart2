@using Vidly.Models
@model IEnumerable<Customer>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (!Model.Any())
{
    <p>We don't have any customers yet..!!</p>
}
else
{
    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customers</th>
                <th>Membership Type</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.name, "Edit", new { id = customer.id })</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>
                        @*js-delete - indicates this class is purely for javascript*@
                        @*data-customer-id="@customer.id" attribute to get customer id*@
                        <button data-customer-id="@customer.id" class="btn-link js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@*Use Jquery to handle click event of Delete button*@

@section scripts{
    <script>
        $(document).ready(function () {

            $('#customers').DataTable();//using Datatables plugin

             /*in customers table find all elements of class js-delete*/
            $("#customers").on("click",".js-delete" ,function () {
                var button = $(this);

                //if confirm function returns true call jQuery ajax
                //if (confirm("Are you sure you want to delete this customer?"))
                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "api/customers/" + $(button).attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                console.log("Success");

                                button.parents("tr").remove();
                            }
                        });
                    }
                });     
            });
        });
    </script>
}

