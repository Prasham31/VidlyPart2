@*Use Jquery to handle click event of Delete button*@

@section scripts{
    <script>
        $(document).ready(function () {
            //using Datatables plugin
            //$('#movies').DataTable();

            //datatable using source as api/movies
            var table = $('#movies').DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: "",
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, movie) {
                            return "<a href='/movie/edit/'" + movie.id + ">" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "Genre.Name"
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            /*in movies table find all elements of class js-delete*/
            $("#movies").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        //console.log("Success");
                        $.ajax({
                            url: "api/movies/" + $(button).attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                //console.log("Success");

                                //To remove row from datatable permanently
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}

